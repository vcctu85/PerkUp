<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:twittersdk="http://schemas.android.com/apk/res-auto"

    >

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back"/>


    <TextView
        android:id="@+id/appLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PerkUp"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FF6E08"

        />
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="#FFFCB7"
     android:text="Please choose your environment"
     android:layout_below="@+id/appLogo"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="5dp"
     />


    <Button
        android:id="@+id/beach"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/environment_button_shape"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:text="BEACH"
        android:textColor="#FF6E08"
        android:layout_below="@+id/appLogo"
        android:layout_marginTop="80dp"
        />

    <Button
        android:id="@+id/forest"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/environment_button_shape"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:text="forest"
        android:textColor="#FF6E08"
        android:layout_below="@+id/beach"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/galaxy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:layout_centerVertical="true"
        android:background="@drawable/environment_button_shape"
        android:layout_below="@id/forest"
        android:layout_marginTop="20dp"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:text="Galaxy"
        android:textColor="#FF6E08" />



</RelativeLayout>
